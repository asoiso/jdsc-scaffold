# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true

[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 110
trim_trailing_whitespace = true

[*.{html,ejs,hbs,md,json,gql,yml,yaml,puml,sh,code-workspace}]
indent_size = 2
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
